{% extends 'layout/dashboard.html.twig' %}

{% block title %}Team{% endblock %}

{% block navbar %}
    {% include 'partials/navbar/_admin.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Leader</th>
                <td>{{ team.leader ? team.leader.firstName ~ ' ' ~ team.leader.lastName : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ team.createdAt ? team.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_team_index') }}">back to list</a>

    <a href="{{ path('app_admin_team_edit', {'id': team.id}) }}">edit</a>

    {{ include('admin/team/_delete_form.html.twig') }}
{% endblock %}
